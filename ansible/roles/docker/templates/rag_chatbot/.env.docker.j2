# RAG Chatbot Service Environment Configuration
# Docker Environment Variables

# Application Configuration
ENVIRONMENT={{ app_environment }}
DEBUG={{ debug }}
API_V1_STR=/api/v1
PROJECT_NAME={{ chatbot_project_name }}

# CORS Configuration
CORS_ORIGINS={{ cors_origins }}

# Security Configuration
API_KEY={{ api_key }}
JWT_SECRET={{ jwt_secret }}
JWT_ALGORITHM={{ jwt_algorithm }}

# Node.js Backend Integration
NODE_BACKEND_URL=http://nodejs-backend:{{ nodejs_port }}

# Database Configuration (PostgreSQL for RAG)
DATABASE_URL=postgresql://{{ postgres_user }}:{{ postgres_password }}@postgres:{{ postgres_port }}/{{ postgres_database }}
DB_HOST=postgres
DB_PORT={{ postgres_port }}
DB_NAME={{ postgres_database }}
DB_USER={{ postgres_user }}
DB_PASSWORD={{ postgres_password }}

# MySQL Database (for shared data access)
MYSQL_DATABASE_URL=mysql://{{ mysql_user }}@mysql:3306/{{ mysql_database }}

# Redis Configuration
REDIS_URL=redis://redis:{{ redis_port }}/{{ redis_db }}
REDIS_HOST=redis
REDIS_PORT={{ redis_port }}
REDIS_PASSWORD={{ redis_password }}
REDIS_DB={{ redis_db }}

# Celery Configuration
CELERY_BROKER_URL=redis://redis:{{ redis_port }}/{{ redis_db }}
CELERY_RESULT_BACKEND=redis://redis:{{ redis_port }}/{{ redis_db }}

# Vector Store Configuration
VECTOR_STORE_PATH=/app/data/chroma
CHROMA_HOST=vector_store
CHROMA_PORT={{ chroma_port }}
CHROMA_COLLECTION_NAME={{ chroma_collection_name }}

# LLM Configuration (Ollama)
OLLAMA_BASE_URL=http://ollama:{{ ollama_port }}
OLLAMA_MODEL={{ ollama_model }}
LLM_TEMPERATURE={{ llm_temperature }}
LLM_MAX_TOKENS={{ llm_max_tokens }}

# Embeddings Configuration
EMBEDDING_MODEL={{ embedding_model }}
EMBEDDING_DIMENSION={{ embedding_dimension }}

# RAG Configuration
RAG_CHUNK_SIZE={{ rag_chunk_size }}
RAG_CHUNK_OVERLAP={{ rag_chunk_overlap }}
RAG_TOP_K_RETRIEVAL={{ rag_top_k_retrieval }}
RAG_SIMILARITY_THRESHOLD={{ rag_similarity_threshold }}

# Index Configuration
INDEX_UPDATE_INTERVAL={{ index_update_interval }}
AUTO_INDEX_ENABLED={{ auto_index_enabled }}

# Monitoring Configuration
ENABLE_METRICS={{ enable_metrics }}
PROMETHEUS_PORT={{ chatbot_prometheus_port }}

# Logging Configuration
LOG_LEVEL={{ log_level }}
LOG_FORMAT={{ log_format }}

# Cache Configuration
CACHE_TTL={{ cache_ttl }}
ENABLE_CACHE={{ enable_cache }}