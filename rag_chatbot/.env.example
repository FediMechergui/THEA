# RAG Chatbot Service Environment Configuration
# Development Environment Variables

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=Thea RAG Chatbot

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Security Configuration
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256

# Node.js Backend Integration
NODE_BACKEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL for RAG)
DATABASE_URL=postgresql://user:password@localhost:5432/thea
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thea
DB_USER=user
DB_PASSWORD=password

# MySQL Database (for shared data access)
MYSQL_DATABASE_URL=mysql://root@localhost:3306/thea_db_neo

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Vector Store Configuration
VECTOR_STORE_PATH=./data/chroma
CHROMA_HOST=localhost
CHROMA_PORT=8010
CHROMA_COLLECTION_NAME=thea_documents

# LLM Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Embeddings Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RETRIEVAL=3
RAG_SIMILARITY_THRESHOLD=0.7

# Index Configuration
INDEX_UPDATE_INTERVAL=3600  # 1 hour
AUTO_INDEX_ENABLED=true

# Monitoring Configuration
ENABLE_METRICS=true
PROMETHEUS_PORT=8001

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true