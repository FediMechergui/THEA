services:
  nginx:
    image: nginx:alpine
    container_name: thea-loadbalancer
    ports:
      - "80:80"
      - "443:443"
      - "3000:3000"   # Node.js Backend
      - "8000:8000"   # FastAPI OCR
      - "8001:8001"   # RAG Chatbot
      - "9090:9090"   # Prometheus
      - "3010:3010"   # Grafana
    volumes:
      - ./conf/nginx.conf:/etc/nginx/nginx.conf:ro
    restart: unless-stopped
    networks:
      - thea-network

networks:
  thea-network:
    driver: bridge
