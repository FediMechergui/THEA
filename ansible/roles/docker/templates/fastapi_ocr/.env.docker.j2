# FastAPI OCR Service Environment Configuration
# Docker Environment Variables

# Application Configuration
ENVIRONMENT={{ app_environment }}
DEBUG={{ debug }}
API_V1_STR=/api/v1
PROJECT_NAME={{ ocr_project_name }}

# CORS Configuration
CORS_ORIGINS={{ cors_origins }}

# Security Configuration
API_KEY={{ api_key }}

# Node.js Backend Integration
NODE_BACKEND_URL=http://nodejs-backend:{{ nodejs_port }}

# RabbitMQ Configuration
RABBITMQ_URL=amqp://{{ rabbitmq_user }}:{{ rabbitmq_password }}@rabbitmq:{{ rabbitmq_port }}/
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT={{ rabbitmq_port }}
RABBITMQ_USER={{ rabbitmq_user }}
RABBITMQ_PASSWORD={{ rabbitmq_password }}
RABBITMQ_VHOST=/

# Redis Configuration
REDIS_URL=redis://redis:{{ redis_port }}/{{ redis_db }}
REDIS_HOST=redis
REDIS_PORT={{ redis_port }}
REDIS_PASSWORD={{ redis_password }}
REDIS_DB={{ redis_db }}

# Celery Configuration
CELERY_BROKER_URL=redis://redis:{{ redis_port }}/{{ redis_db }}
CELERY_RESULT_BACKEND=redis://redis:{{ redis_port }}/{{ redis_db }}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# OCR Configuration
OCR_CONFIDENCE_THRESHOLD={{ ocr_confidence_threshold }}
TESSERACT_LANG={{ tesseract_lang }}
TESSERACT_CONFIG={{ tesseract_config }}

# File Processing Configuration
MAX_FILE_SIZE={{ max_file_size }}
ALLOWED_FILE_TYPES={{ allowed_file_types }}
UPLOAD_TEMP_DIR={{ ocr_upload_temp_dir }}
PROCESSING_TIMEOUT={{ processing_timeout }}

# Monitoring Configuration
ENABLE_METRICS={{ enable_metrics }}
PROMETHEUS_PORT={{ ocr_prometheus_port }}

# Logging Configuration
LOG_LEVEL={{ log_level }}
LOG_FORMAT={{ log_format }}

# MinIO Configuration (for file access)
MINIO_ENDPOINT=minio
MINIO_PORT={{ minio_port }}
MINIO_ACCESS_KEY={{ minio_root_user }}
MINIO_SECRET_KEY={{ minio_root_password }}
MINIO_USE_SSL={{ minio_use_ssl }}
MINIO_BUCKET_NAME={{ minio_bucket_name }}